all: compile build

compile: main.o loader.o game.o render.o
	gcc -o debug/alchimist obj/loader.o obj/render.o obj/game.o obj/main.o -g

main.o: src/main.c
	gcc -c src/main.c -o obj/main.o -g

loader.o: src/loader.c src/loader.h
	gcc -c src/loader.c -o obj/loader.o -g

game.o: src/game.c src/game.h
	gcc -c src/game.c -o obj/game.o -g

render.o: src/render.c src/render.h
	gcc -c src/render.c -o obj/render.o -g
